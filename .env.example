# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot Settings
BOT_NAME=FreeFansBot
BOT_USERNAME=@your_bot_username

# Database Configuration (for future use)
DATABASE_URL=sqlite:///freefans.db

# API Configuration (for future content providers)
API_TIMEOUT=30
MAX_SEARCH_RESULTS=50

# Cache Settings
CACHE_TIMEOUT=3600
MAX_CACHE_SIZE=100

# Security Settings
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Content Filters
DEFAULT_CONTENT_TYPE=all
DEFAULT_DATE_RANGE=all
DEFAULT_QUALITY=any

# Pagination Settings
ITEMS_PER_PAGE=5
MAX_ITEMS_PER_SEARCH=100

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_SEARCH_HISTORY=10