# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Bot Settings
BOT_NAME=FreeFansBot
LOG_LEVEL=INFO

# Background Scraper Configuration
CACHE_REFRESH_INTERVAL_HOURS=12
SCRAPER_MAX_WORKERS=6
SCRAPER_BATCH_SIZE=4
SCRAPER_CONCURRENT_REQUESTS=3

# FastAPI Landing Server Configuration
LANDING_ENABLED=true
LANDING_HOST=0.0.0.0
LANDING_PORT=8001
LANDING_BASE_URL=http://localhost:8001
LANDING_SECRET_KEY=your-secret-key-change-this-to-something-secure

# Supabase Database Configuration
SUPABASE_DATABASE_URL=
ENABLE_SUPABASE=true
