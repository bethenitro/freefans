<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="videoBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#16213e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f3460;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="spotlight" cx="50%" cy="30%" r="60%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.3" />
      <stop offset="70%" style="stop-color:#ffffff;stop-opacity:0.1" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="url(#videoBg)"/>
  
  <!-- Spotlight effect -->
  <rect width="800" height="600" fill="url(#spotlight)"/>
  
  <!-- Stage/Floor -->
  <ellipse cx="400" cy="500" rx="300" ry="50" fill="#2c2c54" opacity="0.6"/>
  
  <!-- Equipment silhouettes -->
  <!-- Camera on tripod -->
  <g transform="translate(100, 350)" fill="#40407a" opacity="0.7">
    <rect x="15" y="0" width="30" height="20" rx="5"/>
    <rect x="25" y="20" width="10" height="80"/>
    <rect x="10" y="100" width="40" height="5"/>
    <rect x="0" y="105" width="60" height="3"/>
  </g>
  
  <!-- Lighting equipment -->
  <g transform="translate(650, 200)" fill="#40407a" opacity="0.6">
    <rect x="20" y="0" width="20" height="15" rx="3"/>
    <rect x="25" y="15" width="10" height="120"/>
    <rect x="15" y="135" width="30" height="5"/>
    <circle cx="30" cy="7" r="15" fill="none" stroke="#40407a" stroke-width="2"/>
  </g>
  
  <!-- Director's chair -->
  <g transform="translate(600, 400)" fill="#40407a" opacity="0.5">
    <rect x="0" y="40" width="50" height="30" rx="5"/>
    <rect x="5" y="0" width="40" height="40" rx="3"/>
    <rect x="0" y="70" width="10" height="40"/>
    <rect x="40" y="70" width="10" height="40"/>
  </g>
  
  <!-- Film reels -->
  <g transform="translate(50, 100)" fill="#40407a" opacity="0.4">
    <circle cx="25" cy="25" r="25" fill="none" stroke="#40407a" stroke-width="3"/>
    <circle cx="25" cy="25" r="15" fill="none" stroke="#40407a" stroke-width="2"/>
    <circle cx="25" cy="25" r="5"/>
    <circle cx="75" cy="35" r="20" fill="none" stroke="#40407a" stroke-width="2"/>
    <circle cx="75" cy="35" r="12" fill="none" stroke="#40407a" stroke-width="1"/>
    <circle cx="75" cy="35" r="4"/>
  </g>
  
  <!-- Play button overlay -->
  <g transform="translate(400, 300)">
    <!-- Play button background -->
    <circle cx="0" cy="0" r="60" fill="rgba(255,255,255,0.1)" stroke="rgba(255,255,255,0.3)" stroke-width="2"/>
    <circle cx="0" cy="0" r="45" fill="rgba(79,70,229,0.8)"/>
    
    <!-- Play triangle -->
    <polygon points="-15,-20 -15,20 20,0" fill="white"/>
  </g>
  
  <!-- Video progress bar -->
  <rect x="100" y="520" width="600" height="4" fill="rgba(255,255,255,0.2)" rx="2"/>
  <rect x="100" y="520" width="200" height="4" fill="#4f46e5" rx="2"/>
  <circle cx="300" cy="522" r="6" fill="#4f46e5"/>
  
  <!-- Time indicators -->
  <text x="100" y="545" fill="rgba(255,255,255,0.6)" font-family="Arial, sans-serif" font-size="12">2:34</text>
  <text x="700" y="545" fill="rgba(255,255,255,0.6)" font-family="Arial, sans-serif" font-size="12">8:45</text>
  
  <!-- Video controls -->
  <g transform="translate(350, 550)" fill="rgba(255,255,255,0.7)">
    <!-- Previous -->
    <polygon points="0,0 0,20 15,10"/>
    <rect x="-5" y="5" width="3" height="10"/>
    
    <!-- Play/Pause -->
    <rect x="25" y="5" width="3" height="10"/>
    <rect x="30" y="5" width="3" height="10"/>
    
    <!-- Next -->
    <polygon points="45,0 60,10 45,20"/>
    <rect x="60" y="5" width="3" height="10"/>
    
    <!-- Volume -->
    <polygon points="75,5 75,15 85,15 95,5 95,15 85,15"/>
    <path d="M 100 7 Q 105 5 105 10 Q 105 15 100 13" stroke="rgba(255,255,255,0.7)" stroke-width="1" fill="none"/>
  </g>
  
  <!-- Film strip border -->
  <rect width="800" height="600" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="8"/>
  
  <!-- Film perforations -->
  <g fill="rgba(255,255,255,0.1)">
    <rect x="10" y="50" width="15" height="8" rx="2"/>
    <rect x="10" y="70" width="15" height="8" rx="2"/>
    <rect x="10" y="90" width="15" height="8" rx="2"/>
    <rect x="10" y="110" width="15" height="8" rx="2"/>
    <rect x="10" y="130" width="15" height="8" rx="2"/>
    
    <rect x="775" y="50" width="15" height="8" rx="2"/>
    <rect x="775" y="70" width="15" height="8" rx="2"/>
    <rect x="775" y="90" width="15" height="8" rx="2"/>
    <rect x="775" y="110" width="15" height="8" rx="2"/>
    <rect x="775" y="130" width="15" height="8" rx="2"/>
  </g>
  
  <!-- Title -->
  <text x="400" y="50" text-anchor="middle" fill="rgba(255,255,255,0.8)" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Behind the Scenes</text>
  <text x="400" y="75" text-anchor="middle" fill="rgba(255,255,255,0.6)" font-family="Arial, sans-serif" font-size="16">Exclusive Video Content</text>
</svg>